{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,    /* Added this */
    "allowSyntheticDefaultImports": true,  /* Added this */
    "jsx": "react-jsx",         /* Added this */
     "composite": true,
     
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Testing */
    "types": ["jest", "@testing-library/jest-dom", "node"]  /* Added this */
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}